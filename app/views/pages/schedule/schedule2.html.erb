<body>
    <%= render 'layouts/navbar' %>

    <div class="container white-container">
        <div class="row">
            <div class="col-xs-11 col-xs-offset-1">
                <h2>Add New Pickup Day</h2>
                <p class="hidden-xs">To add a day, select the date from the calendar below.</p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4 col-xs-offset-1 col-xs-12">
                <table class="hidden-xs table-condensed table-bordered table-striped calendar">
                    <thead>
                        <tr>
                            <th colspan="7">
                                <span class="btn-group">

                        	<p class="table-title"><span class="glyphicon glyphicon-chevron-left"></span>&nbsp;&nbsp;April 2016&nbsp;&nbsp;<span class="glyphicon glyphicon-chevron-right"></span></p>

                                </span>
                            </th>
                        </tr>
                        <tr>
                            <th>Su</th>
                            <th>Mo</th>
                            <th>Tu</th>
                            <th>We</th>
                            <th>Th</th>
                            <th>Fr</th>
                            <th>Sa</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="muted">27</td>
                            <td class="muted">28</td>
                            <td class="muted">29</td>
                            <td class="muted">30</td>
                            <td class="muted">31</td>
                            <td>1</td>
                            <td>2</td>
                        </tr>
                        <tr>
                            <td>3</td>
                            <td>4</td>
                            <td class="btn-success">5</td>
                            <td>6</td>
                            <td>7</td>
                            <td>8</td>
                            <td>9</td>
                        </tr>
                        <tr>
                            <td>10</td>
                            <td>11</td>
                            <td class="btn-success">12</td>
                            <td>13</td>
                            <td>14</td>
                            <td class="btn-success">15</td>
                            <td>16</td>
                        </tr>
                        <tr>
                            <td>17</td>
                            <td>18</td>
                            <td>19</td>
                            <td>20</td>
                            <td>21</td>
                            <td class="btn-success">22</td>
                            <td>23</td>
                        </tr>
                        <tr>
                            <td>24</td>
                            <td>25</td>
                            <td>26</td>
                            <td>27</td>
                            <td>28</td>
                            <td class="btn-primary"><strong>29</strong></td>
                            <td>30</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-xs-12 col-sm-6 col-sm-offset-1">
                <p class="visible-xs-block">To add a day, select the date from the fields below.</p>
                <form>
                    <div class="row">
                        <div class="col-xs-6 col-sm-5">
                            <div class="form-group">
                                Month:
                                <select class="extra-right-margin form-control">
                                    <option value="January">January</option>
                                    <option value="February">February</option>
                                    <option value="March">March</option>
                                    <option value="April" selected>April</option>
                                    <option value="May">May</option>
                                    <option value="June">June</option>
                                    <option value="July">July</option>
                                    <option value="August">August</option>
                                    <option value="September">September</option>
                                    <option value="October">October</option>
                                    <option value="November">November</option>
                                    <option value="December">December</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xs-6 col-sm-5">
                            <div class="form-group">
                                Day:
                                <input class="form-control" type="number" min=1 max=31 value="29">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-10">
                            <div class="form-group">
                                Year:
                                <select class="form-control">
                                    <option value="2016">2017</option>
                                    <option value="2016" selected>2016</option>
                                    <option value="2015">2015</option>
                                    <option value="2014">2014</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-xs-12 col-sm-10">
                            <div class="form-group">
                                <a href="/schedule/schedule1">
                                    <btn class="btn btn-success btn-wide extra-right-margin">Add Day</btn>
                                </a>
                                <span class="hidden-xs">&nbsp;&nbsp;&nbsp;</span>&nbsp;
                                <a href="/schedule/schedule1">
                                    <btn class="btn btn-danger btn-wide">Cancel</btn>
                                </a>
                            </div>
                        </div>
                    </div>
                </form>


            </div>

        </div>
    </div>

</body>
